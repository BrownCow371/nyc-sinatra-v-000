<h1>Edit Landmark:</h1>
<h2><%=@landmark.name%></h2>


<form action="/landmarks" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <input type="hidden" name="landmark[id]" value="<%=@landmark.id%>">
  <p><strong>Edit Landmark Name:</strong> <input type="text" id="name" name="landmark[name]" value="<%=@landmark.name%>"></p>
  <p><strong>Edit Landmark Year:</strong> <input type="text" id="landmark_year_completed" name="landmark[year_completed]" value="<%=@landmark.year_completed%>"></p>
  <input type="submit" name="Edit Landmark" value="Edit Landmark">
</form>
